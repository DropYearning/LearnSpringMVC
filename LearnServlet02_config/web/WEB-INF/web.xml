<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--配置全局信息-->
    <context-param>
        <param-name>encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>


    <servlet>
        <servlet-name>servletConfigDemo1</servlet-name>
        <servlet-class>com.study.servlet.ServletConfigDemo1</servlet-class>
        <init-param>
            <!--配置servlet的参数配置信息-->
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletConfigDemo1</servlet-name>
        <url-pattern>/demo1</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>servletConfigDemo2</servlet-name>
        <servlet-class>com.study.servlet.ServletConfigDemo2</servlet-class>
        <init-param>
            <!--配置servlet的参数配置信息-->
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletConfigDemo2</servlet-name>
        <url-pattern>/demo2</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>servletConfigDemo3</servlet-name>
        <servlet-class>com.study.servlet.ServletConfigDemo3</servlet-class>
        <init-param>
            <!--配置servlet的参数配置信息-->
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletConfigDemo3</servlet-name>
        <url-pattern>/demo3</url-pattern>
    </servlet-mapping>

    <!--测试ServletContext-->
    <servlet>
        <servlet-name>servletContextDemo1</servlet-name>
        <servlet-class>com.study.servlet.ServletContextDemo1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletContextDemo1</servlet-name>
        <url-pattern>/demo4</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>servletContextDemo2</servlet-name>
        <servlet-class>com.study.servlet.ServletContextDemo2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletContextDemo2</servlet-name>
        <url-pattern>/demo5</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>servletContextDemo3</servlet-name>
        <servlet-class>com.study.servlet.ServletContextDemo3</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletContextDemo3</servlet-name>
        <url-pattern>/demo6</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>servletContextDemo4</servlet-name>
        <servlet-class>com.study.servlet.ServletContextDemo4</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletContextDemo4</servlet-name>
        <url-pattern>/demo7</url-pattern>
    </servlet-mapping>

</web-app>